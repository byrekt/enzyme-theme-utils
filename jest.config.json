{
  "collectCoverage": true,
  "coverageDirectory": "coverage",
   "collectCoverageFrom": [
    "src/**/*.{js,jsx}",
    "!src/**/*.spec.{js,jsx}",
    "!dist/*.js"
  ],
  "coverageReporters": [
     "text",
     "json",
     "json-summary",
     "lcov"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  },
  "globals": {
    "NODE_ENV": "test"
  },
  "setupTestFrameworkScriptFile": "./test-setup.js",
  "moduleFileExtensions": ["js", "json", "jsx"],
  "modulePaths": [
    "src"
  ],
  "verbose": true
}